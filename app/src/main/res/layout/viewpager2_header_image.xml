<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_viewpager2"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:contentDescription="somethings"
        android:scaleType="centerCrop"
        android:src="@drawable/blade"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/custom_image_viewpager2"
        app:layout_constraintBottom_toBottomOf="@id/image_viewpager2"
        app:layout_constraintEnd_toEndOf="@id/image_viewpager2"
        app:layout_constraintStart_toStartOf="@id/image_viewpager2" />

    <TextView
        android:id="@+id/title_viewpager2_film"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:paddingLeft="4dp"
        android:text="Blade Runner 2"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/image_viewpager2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>